<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prekira.petzforlife.neighborhood">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="355dp"
            android:layout_height="49dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="My Neighborhood Status"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="31dp" />


        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/button"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Status: safe,             Owner Bob,                      click to see more."
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="452dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="244dp"
            android:layout_height="141dp"
            android:layout_alignEnd="@+id/editText2"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/editText2"
            android:text="Al the Dog:"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="410dp" />

        <Button
            android:id="@+id/petdog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/seekBar2"
            android:backgroundTint="@color/colorAccent"
            android:text="Al the Dog"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="410dp" />

        <SeekBar
            android:id="@+id/seekBar3"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="420dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:layout_alignTop="@+id/seekBar2"
            android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp"
            android:max="10"
            android:progress="3"
            tools:layout_editor_absoluteX="-7dp"
            tools:layout_editor_absoluteY="345dp" />

        <SeekBar
            android:id="@+id/seekBar2"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="420dp"
            android:layout_height="45dp"
            android:layout_above="@+id/textView2"
            android:layout_alignEnd="@+id/button2"
            android:layout_alignRight="@+id/button2"
            android:max="10"
            android:progress="3"
            tools:layout_editor_absoluteX="248dp"
            tools:layout_editor_absoluteY="345dp" />

        <Button
            android:id="@+id/dog"
            android:layout_width="383dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button2"
            android:layout_marginTop="47dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Dogs of the Neighborhood"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="289dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="390dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button"
            android:layout_marginTop="47dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Shelters"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="196dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="383dp"
            android:layout_height="51dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:layout_marginTop="65dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="PetMatch"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="95dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
