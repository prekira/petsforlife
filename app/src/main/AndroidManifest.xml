        <activity android:name=".coloredActivity" />
        <activity android:name=".lastpage" />

        <activity
            android:name=".landing_page"
            android:label="@string/title_activity_landing_page" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".UserAreaActivity" />
        <activity android:name=".shelter_hi" />

        <activity android:name=".shelter_allownotifications" />
        <activity
            android:name=".shelter_profile"
            android:label="@string/title_activity_shelter_profile" />



        <activity android:name=".shelter_confirmation" />
